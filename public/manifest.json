{
  "manifest_version": 2,

  "name": "Dollar Vote",
  "description": "vote with your dollars",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "permissions": ["https://www.amazon.com/s/*", "https://www.amazon.com/s*",  "activeTab"],
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/s/*", "https://www.amazon.com/s*"],
      "js": ["script.js"]
    }
  ],
  "web_accessible_resources":["index.js", "index.css", "donations.js", "DonationPopover.js"],
  "icons": {
    "16": "logo_green.png",
    "48": "logo_green.png",
    "128": "logo_green.png"
  },
  "permissions": [
  ]
}